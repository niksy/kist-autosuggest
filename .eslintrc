{
	"root": true,
	"extends": ["niksy", "niksy/next", "niksy/browser", "prettier"],
	"plugins": ["prettier", "html"],
	"rules": {
		"prettier/prettier": 1
	},
	"settings": {
		"html/html-extensions": [".svelte"],
		"html/indent": "0"
	},
	"overrides": [
		{
			"files": ["karma.conf.js"],
			"env": {
				"node": true,
				"es6": true
			},
			"rules": {
				"no-console": 0
			}
		}
	]
}
