	<script>
		$('input').autosuggest({
			source: function ( query ) {
				return $.ajax({
					url: 'http://{{url}}:3000/search',
					data: {
						value: query
					}
				});
			},
			select: function ( item, data ) {
				console.log(this);
				console.log(item);
				console.log(data);
			}
		});
	</script>

